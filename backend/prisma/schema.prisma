generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         Role     @default(USER)
  createdAt    DateTime @default(now())

  // ðŸ‘‡ Relation added
  orders       Order[]
}

model Sweet {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  price     Float
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ðŸ‘‡ Relation added
  orders     Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  sweetId   Int
  quantity  Int
  createdAt DateTime @default(now())

  user   User  @relation(fields: [userId], references: [id])
  sweet  Sweet @relation(fields: [sweetId], references: [id])
}

enum Role {
  USER
  ADMIN
}
